    <title>Tugas Akhir</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script>
        $(document).ready(function(){
        $('.user-container').hide()

        $('.user').click(function() {
            $('.user-container').fadeIn()
        })

        $('.close').click(function() {
            $('.user-container').fadeOut()
        })

        $('.order').click(function() {
            $('.order-container').slideDown()
            $('.order').hide()
            $('.upwards').fadeIn()
        })

        $('.upwards').click(function () {
            $('.order-container').slideUp()
            $('.upwards').hide()
            $('.order').fadeIn()
        })

        $('.heart').click(function() {
            $(this).toggleClass('red-color')
        })
        $('.cart').click(function() {
            $(this).toggleClass('blue-color')
        })
    })
   </script>
   <style>
    .red-color {
        color: red;
    }
    .blue-color {
        color: #0d6efd;
    }
   </style>
</head>
<body>
    <div id="container" class="container-fluid position-relative">
